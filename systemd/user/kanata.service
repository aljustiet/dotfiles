[Unit]
Description=Kanata keyboard remapper
Documentation=https://github.com/jtroo/kanata
After=graphical-session.target

[Service]
Type=simple
WorkingDirectory=/home/aljustiet/.dotfiles/keyboard/kanata
ExecStart=kanata --quiet --nodelay --port 10000 --cfg config.kbd
Restart=on-failure
RestartSec=1

[Install]
WantedBy=graphical-session.target
