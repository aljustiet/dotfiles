[keys.viewer]
f = fullscreen
q = exit
h = step_left
a = step_down
e = step_up
i = step_right
Shift+h = step_left 50
Shift+a = step_down 50
Shift+e = step_up 50
Shift+i = step_right 50

o = zoom 10
u = zoom -10
Shift+o = zoom 50
Shift+u = zoom -50

