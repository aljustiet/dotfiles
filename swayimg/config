[keys.viewer]
Shift+w = zoom width
Shift+y = zoom width
Shift+h = zoom fit
bracketright = zoom 10
bracketleft = zoom -10
Shift+bracketright = zoom 50
Shift+bracketleft = zoom -50
s = flip_vertical
Shift+s = flip_horizontal

9 = rotate_left
0 = rotate_right
f = fullscreen
escape = fullscreen
q = exit
h = step_left
a = step_down
e = step_up
i = step_right
Shift+h = step_left 50
Shift+a = step_down 50
Shift+e = step_up 50
Shift+i = step_right 50
Shift+s = zoom fit

t = antialiasing

y = next_file
g = prev_file
p = next_dir
k = prev_dir

apostrophe = info
w = zoom fix

Shift+space = animation

space = animation
comma = next_frame
period = prev_frame
